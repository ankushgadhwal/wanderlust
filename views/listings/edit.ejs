<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-md-8 offset-2 mt-5">
    <h3>Edit your Listing</h3>
    <form
      action="/listings/<%=listing.id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="listing[title]" class="form-label">Title</label>
        <input
          class="form-control"
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter title</div>
      </div>
      <div class="mb-3">
        <label for="listing[description]" class="form-label">Description</label>
        <textarea class="form-control" name="listing[description]" required>
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter short description</div>
      </div>

      <div class="mb-3">
        <p>Original Listing image</p>
        <img src="<%= originalImageUrl %>" />
      </div>

      <div class="mb-3">
        <label for="listing[image]" class="form-label">Upload New Image</label>
        <input class="form-control" type="file" name="listing[image]" />
        <div class="invalid-feedback">Image should be valid</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="listing[price]" class="form-label">Price</label>
          <input
            class="form-control"
            type="number"
            name="listing[price]"
            value="<%= listing.price %>"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="listing[country]" class="form-label">Country</label>
          <input
            class="form-control"
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            required
          />
          <div class="invalid-feedback">Country should be valid</div>
        </div>
      </div>
      <div>
        <label for="listing[location]" class="form-label">Location</label>
        <input
          class="form-control"
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-dark add-btn mt-5">Edit</button>
      </div>
    </form>
  </div>
</div>
